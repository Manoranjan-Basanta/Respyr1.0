<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="20dp"
    android:background="@color/select_primary"
    tools:context=".profile.user.AddNewProfile">

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center|right"
        android:layout_height="56dp">
        <ImageButton
            android:id="@+id/button_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/close"
            android:background="@color/transparent"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Profile"
            android:fontFamily="@font/poppins_semibold"
            android:includeFontPadding="false"
            android:textSize="25sp"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Let’s get started by building your profile."
            android:fontFamily="@font/mulish"
            android:includeFontPadding="false"
            android:textSize="15sp"
            android:layout_marginTop="15dp"
            android:textColor="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="42dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="61dp">
                        <LinearLayout
                            android:layout_width="48dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:background="@drawable/edit3">
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/name_icon"/>
                        </LinearLayout>
                        <EditText
                            android:id="@+id/et_name"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:background="@drawable/edit1"
                            android:textColorHint="#737373"
                            android:paddingHorizontal="14dp"
                            android:hint="Enter your name"
                            android:fontFamily="@font/roboto"
                            android:textSize="15sp"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txt_err_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Please enter name "
                        android:textColor="@color/red"
                        android:textSize="12sp"
                        android:visibility="gone"
                        android:fontFamily="@font/mulish"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="19dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="61dp">
                        <LinearLayout
                            android:layout_width="48dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:background="@drawable/edit3">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/email_icon"/>
                        </LinearLayout>
                        <EditText
                            android:id="@+id/et_email"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:paddingHorizontal="14dp"
                            android:textColorHint="#737373"
                            android:hint="Enter your email"
                            android:fontFamily="@font/roboto"
                            android:textSize="15sp"
                            android:background="@drawable/edit1"/>
                    </LinearLayout>

                </LinearLayout>
                <TextView
                    android:id="@+id/txt_err_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Please enter name "
                    android:textColor="@color/red"
                    android:visibility="gone"
                    android:textSize="12sp"
                    android:fontFamily="@font/mulish"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:paddingVertical="16dp">

                <Button
                    android:id="@+id/button_next"
                    android:layout_width="match_parent"
                    android:layout_height="61dp"
                    android:text="Build You’re Health Profile"
                    android:textAllCaps="false"
                    android:fontFamily="@font/mulish"
                    android:background="@drawable/eclips1"
                    android:backgroundTint="@color/primary"
                    android:textColor="@color/white"
                    android:textSize="15sp"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>