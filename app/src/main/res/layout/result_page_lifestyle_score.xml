<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"

    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:elevation="5dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:background="@drawable/result_card">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/result_card_header"
            android:backgroundTint="#D9D9D9"
            android:gravity="start|center"
            android:orientation="vertical"
            android:paddingHorizontal="18dp"
            android:paddingTop="30dp"
            android:paddingBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/eclips1"
                android:fontFamily="@font/poppins_semibold"
                android:includeFontPadding="false"
                android:text="LIFESTYLE"
                android:textAllCaps="false"
                android:textColor="#535359"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/poppins_semibold"
                android:includeFontPadding="false"
                android:text="Activity Score"
                android:textColor="#535359"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="20dp"
            android:paddingHorizontal="17dp"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Activity score is function of your exercise, sleep, water intake, alcohol intake, and smoking. For an accurate analysis, track regularly."
                android:textSize="12sp"
                android:fontFamily="@font/mulish"
                android:includeFontPadding="false"
                android:textColor="@color/grey"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="33dp"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="90dp"
                        android:layout_height="90dp">
                        <antonkozyriatskyi.circularprogressindicator.CircularProgressIndicator
                            android:id="@+id/progress_life_style_score"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            app:progressCap="butt"
                            app:progressBackgroundStrokeWidth="5dp"
                            app:progressBackgroundColor="@color/light"
                            app:progressStrokeWidth="3dp"
                            app:drawDot="false"
                            app:textColor="@color/transparent"
                            />
                        <ImageView
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:src="@drawable/heart_vital"
                            android:layout_centerInParent="true"/>
                    </RelativeLayout>
                </LinearLayout>
                <Space
                    android:layout_width="25dp"
                    android:layout_height="0dp"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/txt_life_style_score_profile_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:includeFontPadding="false"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:text="Shubham,\nYou're Vital Score is"
                            android:fontFamily="@font/mulish"/>
                        <ImageButton
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/share"
                            android:background="@color/transparent"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start">

                        <TextView
                            android:id="@+id/txt_lifestyle_score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_bold"
                            android:includeFontPadding="false"
                            android:text="85"
                            android:textColor="@color/black"
                            android:textSize="45sp" />

                        <Space
                            android:layout_width="11dp"
                            android:layout_height="0dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="/ 100"
                            android:textColor="@color/black"
                            android:includeFontPadding="false"
                            android:fontFamily="@font/roboto"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/txt_lifestyle_message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:includeFontPadding="false"
                        android:text="which is good!"
                        android:gravity="start|center"
                        android:textColor="@color/black"
                        android:drawableRight="@drawable/info"
                        android:fontFamily="@font/mulish"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:visibility="gone"
                        android:gravity="center">



                        <RadioButton
                            android:id="@+id/star1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:button="@drawable/start_rating_bg"/>
                        <View
                            android:layout_width="11dp"
                            android:layout_height="0dp"/>

                        <RadioButton
                            android:id="@+id/star2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:button="@drawable/start_rating_bg"/>
                        <View
                            android:layout_width="11dp"
                            android:layout_height="0dp"/>

                        <RadioButton
                            android:id="@+id/star3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:button="@drawable/start_rating_bg"
                            />
                        <View
                            android:layout_width="11dp"
                            android:layout_height="0dp"/>

                        <RadioButton
                            android:id="@+id/star4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:button="@drawable/start_rating_bg"/>
                        <View
                            android:layout_width="11dp"
                            android:layout_height="0dp"/>
                        <RadioButton
                            android:id="@+id/star5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:button="@drawable/start_rating_bg"/>

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_centerHorizontal="true"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_life_style_profile_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/mulish"
                            android:includeFontPadding="false"
                            android:text="-"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="15sp" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="24dp">
                            <TextView
                                android:id="@+id/txt_life_style_score"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-"
                                android:textSize="40sp"
                                android:fontFamily="@font/roboto_medium"
                                android:includeFontPadding="false"
                                android:textColor="@color/black"/>
                            <Space
                                android:layout_width="11dp"
                                android:layout_height="0dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="/100"
                                android:textSize="12sp"
                                android:fontFamily="@font/roboto"
                                android:includeFontPadding="false"
                                android:textColor="@color/black"/>
                        </LinearLayout>



                        <ImageView
                            android:layout_width="160dp"
                            android:layout_height="90dp"
                            android:layout_marginTop="26dp"
                            android:src="@drawable/lifestyle_illustration2"/>
                    </LinearLayout>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="40dp"
                    android:background="#E4F0FF"/>

                <TextView
                    android:id="@+id/txt_life_style_expand_button"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:drawableEnd="@drawable/arrow_right1"
                    android:drawableTint="@color/primary"
                    android:fontFamily="@font/mulish_semibold"
                    android:gravity="start|center"
                    android:paddingHorizontal="20dp"
                    android:text="Expand"
                    android:visibility="gone"
                    android:textColor="@color/primary"
                    android:textSize="15sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:visibility="gone"
                    android:background="#E4F0FF"/>
            </LinearLayout>


            <Button
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:background="@color/transparent"
                android:drawableStart="@drawable/arrow_down"
                android:fontFamily="@font/mulish"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:gravity="start"
                android:drawablePadding="15dp"
                android:layout_marginTop="33dp"
                android:textColor="@color/primary"
                android:textAllCaps="false"
                android:text="View Trend"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="33dp"
                android:background="#E4F0FF"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="25dp"
                android:gravity="center"
                android:layout_marginTop="20dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/img_life_style_warning"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/diabetic_badge"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="2">
                    <TextView
                        android:id="@+id/txt_life_style_score_footer_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textSize="15sp"
                        android:fontFamily="@font/poppins_semibold"
                        android:includeFontPadding="false"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/txt_life_style_score_footer_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textSize="12sp"
                        android:fontFamily="@font/mulish"
                        android:includeFontPadding="false"
                        android:textColor="@color/grey"
                        android:layout_marginTop="10dp"/>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="@color/black"
            android:text="Expand"
            android:textAllCaps="true"
            android:fontFamily="@font/mulish"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:drawableTint="@color/white"
            android:paddingHorizontal="45dp"
            android:background="@drawable/button_resulr_card"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">
        <include layout="@layout/result_page_calories"/>
    </LinearLayout>
    <include layout="@layout/result_page_calories_trend"/>
</LinearLayout>