<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".reading.BlowActivity">



    <include layout="@layout/reading_appbar"/>

    <RelativeLayout
        android:id="@+id/layout_take_deep_breath"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingTop="44dp"
        android:paddingBottom="72dp"
        android:visibility="visible">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="Breath Test"
                android:textColor="@color/black"
                android:includeFontPadding="false"
                android:layout_gravity="center"
                android:textSize="25dp" />
        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/image_swipe_up"
                android:layout_width="match_parent"
                android:layout_height="323dp"
                android:layout_centerInParent="true"
                android:src="@drawable/inhale" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerInParent="true">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Take A Deep Breath in"
                        android:textColor="@color/darK_grey"
                        android:includeFontPadding="false"
                        android:maxWidth="128dp"
                        android:textAlignment="center"
                        android:textSize="18sp" />

                </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/txt_auto_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/roboto"
            android:includeFontPadding="false"
            android:text="-"
            android:textAlignment="center"
            android:textColor="@color/primary"
            android:textSize="15sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_blow_now"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingTop="44dp"
        android:paddingBottom="72dp"
        android:visibility="gone">

        <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:fontFamily="@font/poppins_semibold"
                  android:text="Blow Now"
                  android:textColor="@color/black"
                  android:includeFontPadding="false"
                  android:layout_gravity="center"
                  android:textSize="25dp" />
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:fontFamily="@font/mulish"
                  android:text="Blow with full capacity into\nthe mouth tube"
                  android:textColor="@color/darK_grey"
                  android:layout_gravity="center"
                  android:textAlignment="center"
                  android:includeFontPadding="false"
                  android:layout_marginTop="12dp"
                  android:textSize="15sp" />
          </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="437dp"
            android:layout_centerInParent="true"
            android:orientation="vertical">
            <ImageView
                android:layout_width="268dp"
                android:layout_height="268dp"
                android:visibility="visible"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                android:elevation="2dp"
                android:src="@drawable/blow_now"/>
            <pl.droidsonroids.gif.GifImageView
                android:layout_width="221dp"
                android:layout_height="221dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/blow_now_animation" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mulish"
                android:text="Blow gently &amp; continuously into\nthe device "
                android:textColor="@color/grey"
                android:includeFontPadding="false"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:textSize="15sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="23dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="44dp"
                android:layout_gravity="center"
                android:layout_height="44dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/txt_blow_within"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="bottom"
                        android:text="12"
                        android:includeFontPadding="false"
                        android:lineSpacingExtra="-3sp"
                        android:textColor="@color/primary"
                        android:textSize="20dp" />
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:layout_gravity="center"
                android:text="Blow Within"
                android:textColor="@color/primary"
                android:includeFontPadding="false"
                android:textAlignment="center"
                android:layout_marginTop="28dp"
                android:textSize="15sp" />
        </LinearLayout>
    </RelativeLayout>



    <LinearLayout
        android:id="@+id/layout_analysing"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="44dp"
        android:visibility="gone">

        <include layout="@layout/analysin_page"/>




        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/gif1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/gif1" />


    </LinearLayout>

    <TextView
        android:id="@+id/txtDisplay"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:textColor="@color/black"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text=""/>

</LinearLayout>