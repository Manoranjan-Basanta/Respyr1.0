<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".authentication.profile_creation.lifestyle.MentalConditions">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <include layout="@layout/user_profile_create_progress3"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="12dp"
                        android:paddingHorizontal="26dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_semibold"
                                android:gravity="center"
                                android:includeFontPadding="false"
                                android:text="@string/lifestyle"
                                android:textAllCaps="true"
                                android:textColor="@color/primary"
                                android:textSize="15sp" />
                            <include layout="@layout/user_profile_dots"/>
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_semibold"
                            android:gravity="start"
                            android:includeFontPadding="false"
                            android:text="Are you struggling from any of the following mental conditions ?"
                            android:layout_marginTop="37.5dp"
                            android:textColor="@color/black"
                            android:textSize="25sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:fontFamily="@font/mulish"
                            android:gravity="start"
                            android:includeFontPadding="false"
                            android:textColor="@color/grey"
                            android:textSize="15sp"
                            android:text="@string/this_is_used_to_get_accurate_health_status"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="start|center"
                        android:paddingHorizontal="20dp"
                        android:layout_marginTop="30dp"
                        android:paddingBottom="26dp"
                        android:orientation="vertical">
                        <CheckBox
                            android:id="@+id/check_box_none"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="20dp"
                            android:gravity="start|center"
                            android:checked="false"
                            android:button="@drawable/chk_condition"
                            android:textColor="@color/black"
                            android:drawablePadding="50dp"
                            android:fontFamily="@font/mulish"
                            android:textSize="15sp"
                            android:text="None"/>
                        <CheckBox
                            android:id="@+id/chk1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="start|center"
                            android:checked="false"
                            android:button="@drawable/chk_condition"
                            android:textColor="@color/black"
                            android:drawablePadding="50dp"
                            android:paddingHorizontal="20dp"
                            android:fontFamily="@font/mulish"
                            android:textSize="15sp"
                            android:layout_marginTop="20dp"
                            android:text="Anxiety/ Stress"/>
                        <CheckBox
                            android:id="@+id/chk2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="20dp"
                            android:gravity="start|center"
                            android:checked="false"
                            android:button="@drawable/chk_condition"
                            android:textColor="@color/black"
                            android:drawablePadding="50dp"
                            android:fontFamily="@font/mulish"
                            android:textSize="15sp"
                            android:layout_marginTop="20dp"
                            android:text="Depression"/>
                        <CheckBox
                            android:id="@+id/chk3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="20dp"
                            android:gravity="start|center"
                            android:checked="false"
                            android:button="@drawable/chk_condition"
                            android:textColor="@color/black"
                            android:drawablePadding="50dp"
                            android:fontFamily="@font/mulish"
                            android:textSize="15sp"
                            android:layout_marginTop="20dp"
                            android:text="Post-Traumatic Stress Disorder (PTSD)"/>
                        <CheckBox
                            android:id="@+id/chk4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="20dp"
                            android:gravity="start|center"
                            android:checked="false"
                            android:button="@drawable/chk_condition"
                            android:textColor="@color/black"
                            android:drawablePadding="50dp"
                            android:fontFamily="@font/mulish"
                            android:textSize="15sp"
                            android:layout_marginTop="20dp"
                            android:text="Schizophrenia"/>
                        <CheckBox
                            android:id="@+id/chk5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="20dp"
                            android:gravity="start|center"
                            android:checked="false"
                            android:button="@drawable/chk_condition"
                            android:textColor="@color/black"
                            android:drawablePadding="50dp"
                            android:fontFamily="@font/mulish"
                            android:textSize="15sp"
                            android:layout_marginTop="20dp"
                            android:text="Eating Disorders"/>
                        <CheckBox
                            android:id="@+id/chk6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="20dp"
                            android:gravity="start|center"
                            android:checked="false"
                            android:button="@drawable/chk_condition"
                            android:textColor="@color/black"
                            android:drawablePadding="50dp"
                            android:fontFamily="@font/mulish"
                            android:textSize="15sp"
                            android:layout_marginTop="20dp"
                            android:text="Disruptive behaviour and dissocial disorders"/>
                        <CheckBox
                            android:id="@+id/chk7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="20dp"
                            android:gravity="start|center"
                            android:checked="false"
                            android:button="@drawable/chk_condition"
                            android:textColor="@color/black"
                            android:drawablePadding="50dp"
                            android:fontFamily="@font/mulish"
                            android:textSize="15sp"
                            android:layout_marginTop="20dp"
                            android:text="Autism spectrum"/>
                        <CheckBox
                            android:id="@+id/chk8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="20dp"
                            android:gravity="start|center"
                            android:checked="false"
                            android:button="@drawable/chk_condition"
                            android:textColor="@color/black"
                            android:drawablePadding="50dp"
                            android:fontFamily="@font/mulish"
                            android:textSize="15sp"
                            android:layout_marginTop="20dp"
                            android:text="Attention deficit hyperactivity disorder (ADHD)"
                         />
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#E4F0FF"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/white"
            android:layout_height="91dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="start|center"
                android:layout_height="match_parent"
                android:paddingHorizontal="13dp">
                <Button
                    android:id="@+id/button_back"
                    android:layout_width="142dp"
                    android:layout_height="61dp"
                    android:includeFontPadding="false"
                    android:text="Back"
                    android:paddingHorizontal="22dp"
                    android:drawableStart="@drawable/ic_back"
                    android:drawableTint="@color/black"
                    android:elevation="0dp"
                    android:fontFamily="@font/mulish_semibold"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:background="@color/transparent"/>
                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/button_next"
                    android:layout_width="142dp"
                    android:layout_height="61dp"
                    android:background="@drawable/button_small_1"
                    android:drawableRight="@drawable/ic_next"
                    android:drawableTint="@color/white"
                    android:elevation="0dp"
                    android:fontFamily="@font/mulish_semibold"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:includeFontPadding="false"
                    android:paddingHorizontal="22dp"
                    android:text="Next" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>